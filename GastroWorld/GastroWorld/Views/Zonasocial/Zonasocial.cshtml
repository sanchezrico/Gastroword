<style>
    #zona-social {
        border: 1px solid #ccc;
        padding: 20px;
        margin: 20px 0;
    }

    #nueva-publicacion {
        margin-bottom: 20px;
    }

    textarea {
        width: 100%;
        height: 100px;
    }

    button {
        margin-top: 10px;
    }

</style>
<h1>aca es zona social </h1>
<div id="zona-social">
    <h2>Zona Social</h2>
    <div id="nueva-publicacion">
        <textarea placeholder="Escribe tu comentario o sube una foto..."></textarea>
        <input type="file" accept="image/*">
        <button>Publicar</button>
    </div>
    <div id="publicaciones">
        <!-- Las publicaciones se agregarán aquí dinámicamente -->
    </div>
</div>
<script>
        document.querySelector('button').addEventListener('click', function () {
        const textarea = document.querySelector('textarea');
        const publicacionesDiv = document.getElementById('publicaciones');

        const publicacion = document.createElement('div');
        publicacion.classList.add('publicacion');
        publicacion.innerHTML = `<p>${textarea.value}</p>`;

        publicacionesDiv.appendChild(publicacion);
        textarea.value = ''; // Limpiar el textarea
    });
</script>
